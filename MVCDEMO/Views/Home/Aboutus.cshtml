
@{
    ViewData["Title"] = "Aboutus";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Aboutus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <link href="style1.css" rel="stylesheet" />
</head>
<body>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="1.jpg" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="2.jpg" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="3.jpg" class="d-block w-100 h-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="header"></div>

                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center text-secondary">
                <footer>Copyright Onlineshoppy.com</footer>
            </div>
        </div>
    </div>
</body>
</html>


@using (Html.BeginForm())
{
    <p>
        Enter Name : <input type="text" id="fname" name="fname" class="form-control" />
    </p>

    <p>
        Enter Name : @Html.TextBox("fname", "", htmlAttributes: new { @class = "form-control" })
    </p>
    <p>
        <input type="radio" name="Gender" value="Male" /> Male
        <input type="radio" name="Gender" value="Female" /> Female

        Select Gender :
        @Html.RadioButton("Gender", "Male") Male
        @Html.RadioButton("Gender", "Female") Female
    </p>
    <p>
        @Html.CheckBox("Hobbies", "Music") Music
        @Html.CheckBox("Hobbies", "Sports") Sports

    </p>
    <p>
        <input type="submit" value="Save" />
    </p>

}


    
    
   